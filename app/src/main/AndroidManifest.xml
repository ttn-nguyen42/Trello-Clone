<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trello">

    <application
        android:name=".application.TrelloApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trello">
        <activity
            android:name=".activities.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.Trello.NoActionBar" />
        <activity
            android:name=".activities.board.BoardActivity"
            android:exported="false" />
        <activity
            android:name=".activities.sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.sign_in.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".activities.intro.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".activities.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Trello.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>